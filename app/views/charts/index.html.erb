<p id="notice"><%= notice %></p>

<h1>Charts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @charts.each do |chart| %>
      <tr>
        <td><%= link_to 'Show', chart %></td>
        <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
        <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id='overview-charts-container' style='min-width: 310px; max-width: 1200px; height: 300px; margin: 0 auto'>
</div>
<div id='line-chart-container' style='min-width: 310px; height: 400px; margin: 0 auto'>
</div>

<%= link_to 'New Chart', new_chart_path %>
